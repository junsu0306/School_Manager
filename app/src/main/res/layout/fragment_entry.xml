<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="메인 메뉴"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_entry">

        <Button
            android:id="@+id/btn_fragcalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캘린더" />

        <Button
            android:id="@+id/btn_fragcalculator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학점계산기" />

        <Button
            android:id="@+id/btn_fragcalculator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 학점" />

        <Button
            android:id="@+id/btn_fragroadmap1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로드맵" />

        <Button
            android:id="@+id/btn_fragroadmap2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공과목" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
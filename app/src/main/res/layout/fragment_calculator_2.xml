<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator_2">

    <TextView
        android:id="@+id/txt_center1"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:shadowColor="#40000000"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="나의 학점"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <Spinner
        android:id="@+id/semesterSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="Select Semester"
        android:text="@={viewModel.Semester}"
        app:entries="@array/semester_array"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:text="추가"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="204dp" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="457dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semesterSpinner"
        app:layout_constraintVertical_bias="0.8">

        <EditText
            android:id="@+id/txt_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course Name"
            android:text="@={viewModel.courseName}" />


        <EditText
            android:id="@+id/txt_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Grade"
            android:text="@={viewModel.grade}" />

        <EditText
            android:id="@+id/txt_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Credits"
            android:text="@={viewModel.credits}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subjectList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:items="@{viewModel.subjects}" />









    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>